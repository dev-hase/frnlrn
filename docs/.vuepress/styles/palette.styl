@import url('https://fonts.googleapis.com/css2?family=Lobster&family=Open+Sans:ital,wght@0,300;0,400;0,600;0,800;1,400;1,800&display=swap');

$fontB = 'Lobster', cursive
$fontA = 'Open Sans', sans-serif

// colors
$accentColor = #8cce82
$textColor = #333

$danger = #7f0519

$tip = lighten(#e5ffc9, 20%)
$warning = #fffec9

// layout
$navbarHeight = 3.6rem
$sidebarWidth = 20rem
$contentWidth = 740px
$homePageWidth = 960px

// responsive breakpoints
$MQNarrow = 959px
$MQMobile = 719px
$MQMobileNarrow = 419px

// scrollbars

.sidebar::-webkit-scrollbar 
    width .25em

.sidebar::-webkit-scrollbar-thumb 
    background-color lighten($accentColor, 20%)

.sidebar::-webkit-scrollbar-track 
    background-color none

.sidebar
    scrollbar-color lighten($accentColor, 20%) transparent
    scrollbar-width thin


body::-webkit-scrollbar 
    width .75em

body::-webkit-scrollbar-track 
    background-color #555

body::-webkit-scrollbar-thumb 
  background-color #999

html
    scrollbar-color #999 #555

