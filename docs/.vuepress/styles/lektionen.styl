.theme-default-content
	.slabT 
		display flex
		justify-content center
		flex-direction column
		align-items center
		word-break keep-all
		white-space nowrap
		transition .3s
		overflow hidden

		border-bottom-left-radius 1.75rem
		border-bottom-right-radius .25rem
		border-top-right-radius .5rem
		border 3px solid lighten($accentColor, 30%)

		font-size 3.25em
		font-family $fontB


// -------------------------------------------

.l-01 .theme-default-content
	background-image url(/img/flowers.png)!important
	background #492742
	max-width 100vw
	padding 0 10vw 10vh
	margin-bottom -4rem
	h1:first-child
		visibility hidden
		font-size .1rem

.l1
	position relative
	background #492742 !important
	color #eddd63
	font-weight bolder
	text-shadow 3px 3px 5px #333
	letter-spacing -3px
	font-family $fontA !important
	//font-weight 300
	background-image url(/img/flowers.png)

.l-01 .l1:after
	display none
.l1:after
	content '01'
	top 0
	left 0
	position absolute
	padding .5rem
	background $accentColor
	color #00495a
	font-family $fontA 
	font-size 2rem
	text-shadow none
	filter drop-shadow(1px 2px 5px #555)

.l1w
	display flex
	justify-content center
	flex-direction column
	transform rotate(-2deg)

.l1a
	transform rotate(3 deg)
	
	@media (orientation: portrait)
		font-size 5.7vh
	@media (orientation: landscape)
		font-size 8.4vh 

.l1b
	background #dd254d
	line-height 1.6 !important
	@media (orientation: portrait)
		font-size 4vh
	@media (orientation: landscape)
		font-size 5.8vh

