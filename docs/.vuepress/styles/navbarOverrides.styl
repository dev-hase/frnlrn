.hideMe
	//display none

.sidebar-button
	width 1.7rem !important
	height 1.8rem !important
	padding 0 .15rem !important
	img
		width 100%
		height 100%


.logo
	transition .2s
.logo:hover
	transform rotate(7.5deg) scale(1.1)
	filter brightness(120%) drop-shadow(2px -1px 4px #555)
	transition .3s

.logo:hover, .logo:focus
	outline none