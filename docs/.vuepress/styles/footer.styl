#lpFooter
	position fixed
	left 0
	right 0
	bottom 0
	height 100vh
	background #00495a
	z-index -3
	background-image url('/img/footer.jpg')
	background-position center
	background-size cover
	background-repeat no-repeat


.linkList
	font-size 2.5rem
	font-family $fontB
	display flex
	flex-direction column
	height 40vh
	margin-top 50vh
	align-items center
	justify-content space-evenly
	text-shadow 5px 5px 3px #000

	a
		color #cfcfcf
	a:hover, a:focus
		color $accentColor





